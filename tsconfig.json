{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",

        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "declaration": false,
        "outDir": "build",
        "moduleResolution": "node",
         "lib": ["es6", "dom"],

         "typeRoots": [
             "../node_modules/@types"
             ]

    },
    "exclude": [
        "node_modules"
    ],
    "filesGlob": [
        "./index.ts",
        "./src/**/*.ts",
        "./demo/**/*.ts",
        "!./node_modules/**/*.ts",
        "typings/browser.d.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "resolveGlobs": true,
        "forkChecker": true
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
